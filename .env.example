# Database configuration
# Use sqlite:./kubekuma.db for SQLite or postgresql://user:password@host/dbname for PostgreSQL
DATABASE_URL=sqlite:./kubekuma.db

# Server configuration
PORT=3000
NODE_ENV=development

# Kubernetes
KUBECONFIG=/root/.kube/config

# OIDC Configuration (optional)
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URL=http://localhost:3000/auth/callback

# Local Auth
AUTH_MODE=local

# Logging
LOG_LEVEL=debug
