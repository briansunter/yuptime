{
  "$schema": "https://biomejs.dev/schemas/2.3.9/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "recommended": true
      },
      "suspicious": {
        "recommended": true,
        "noExplicitAny": "error",
        "noConsole": "error"
      },
      "style": {
        "recommended": true,
        "noParameterAssign": "error",
        "noDefaultExport": "off",
        "noNonNullAssertion": "error"
      },
      "complexity": {
        "recommended": true
      },
      "performance": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "a11y": {
        "recommended": true
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "files": {
    "includes": ["src/**/*.ts", "src/**/*.tsx"]
  }
}
