{
  "$schema": "https://biomejs.dev/schemas/2.3.9/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "recommended": true
      },
      "suspicious": {
        "recommended": true,
        "noExplicitAny": "error",
        "noConsole": "warn"
      },
      "style": {
        "recommended": true,
        "noParameterAssign": "warn",
        "noDefaultExport": "off"
      },
      "complexity": {
        "recommended": true
      },
      "performance": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "a11y": {
        "recommended": true
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "files": {
    "includes": ["src/**/*.ts", "src/**/*.tsx"]
  },
  "overrides": [
    {
      "includes": ["src/checker-executor/**/*.ts", "src/checkers/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "warn"
          }
        }
      }
    },
    {
      "includes": ["src/lib/rrule.ts", "src/lib/secrets.ts", "src/db/index.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "warn"
          }
        }
      }
    },
    {
      "includes": ["**/*.test.ts", "**/*.test.tsx"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "warn"
          }
        }
      }
    }
  ]
}
