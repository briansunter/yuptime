{
  "name": "kubekuma",
  "version": "0.1.0",
  "description": "Kubernetes-native monitoring where all configuration is CRDs",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "tsc && bun run web:build",
    "web:build": "cd web && bun run build",
    "start": "node dist/index.js",
    "db:push": "drizzle-kit push:sqlite",
    "db:generate": "drizzle-kit generate:sqlite",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cookie": "^8.2.0",
    "@fastify/jwt": "^7.0.0",
    "@kubernetes/client-node": "^1.4.0",
    "argon2": "^0.31.0",
    "drizzle-orm": "^0.30.0",
    "fastify": "^4.24.0",
    "fastify-plugin": "^4.0.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.0.0",
    "postgres": "^3.3.5",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "@types/bun": "latest",
    "@types/node": "^20.12.0",
    "drizzle-kit": "^0.23.0",
    "typescript": "^5.4.4"
  },
  "engines": {
    "bun": ">=1.1.0"
  }
}
