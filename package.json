{
  "name": "yuptime",
  "version": "0.0.18",
  "description": "Kubernetes-native monitoring where all configuration is CRDs",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "bun run src/index.ts",
    "start:node": "node dist/index.js",
    "test": "bun test",
    "test:ci": "bun test --ci src/",
    "test:coverage": "bun test --coverage --coverage-verbose",
    "test:coverage:ci": "bun test --coverage --coverage-reporter=lcov",
    "test:coverage:html": "bun test --coverage --coverage-reporter=html",
    "test:watch": "bun test --watch",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "type-check": "bunx tsc --noEmit",
    "check": "bun run lint && bun run type-check && bun run test",
    "prepare": "husky",
    "generate:helm": "bun run scripts/generate-helm.ts",
    "generate:manifests": "bun run scripts/generate-manifests.ts",
    "generate:all": "bun run generate:helm && bun run generate:manifests",
    "validate:generated": "bun run scripts/validate-generated.ts",
    "test:e2e": "./scripts/e2e-orbstack.sh",
    "test:e2e:keep": "./scripts/e2e-orbstack.sh --no-cleanup",
    "test:e2e:debug": "./scripts/e2e-orbstack.sh --cleanup-on-failure",
    "test:e2e:tests": "bun test e2e/tests/ --timeout 120000",
    "e2e:server": "bun run e2e/mock-server/index.ts",
    "test:verify-env": "./scripts/verify-e2e-env.sh",
    "test:quick": "./scripts/test-e2e-quick.sh"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.4.0",
    "fastify": "^4.24.0",
    "fastify-plugin": "^4.0.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.0.0",
    "prom-client": "^15.1.3",
    "uuid": "^13.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "@types/bun": "latest",
    "@types/node": "^20.12.0",
    "@types/uuid": "^11.0.0",
    "husky": "^9.1.7",
    "typescript": "^5.4.4"
  },
  "engines": {
    "bun": ">=1.1.0"
  }
}
